<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/tb_top_navigation_bar"
        layout="@layout/top_navigation_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tb_top_navigation_bar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/et_edit_post_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Heading"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/et_edit_post_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="top|start"
                android:hint="Content"
                android:inputType="textMultiLine"
                android:minLines="10"
                android:scrollbars="vertical" />

            <EditText
                android:id="@+id/et_edit_who_can_see_the_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Who Can See This Post?"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

            <CheckBox
                android:id="@+id/cb_is_public"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Post it to the world!" />

            <Button
                android:id="@+id/btn_fire_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:text="FIRE" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>