<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_friend_avatar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:layout_gravity="center"
        android:src="@mipmap/user_avatar"/>

    <TextView
        android:id="@+id/tv_friend_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_middle_size"
        tools:text="UserName" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/dimen_middle_size"
            android:textAllCaps="false"
            android:textColor="@color/accept_green"
            android:background="@drawable/button_pressed_effect"
            android:layout_marginEnd="5dp"
            android:text="@string/request_accept"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/dimen_middle_size"
            android:textColor="@color/reject_red"
            android:textAllCaps="false"
            android:background="@drawable/button_pressed_effect"
            android:layout_marginEnd="5dp"
            android:text="@string/request_reject"/>
    </LinearLayout>



</LinearLayout>